<%- if controller_name != 'sessions' %>
  <% if controller_name == 'registrations' %>
    <div class="text-center mt-4">
      <p class="form__label">
        <%= t('shared_links.already_have_an_account').capitalize %>
        <%= link_to t('registration.sign_in').titlecase, new_session_path(resource_name), class: "form__link" ,  data: { cy:  "sign-in-link" } %><br />
      </p>
    </div>
  <% else %>
    <div class="text-center mt-2">
      <p class="form__label">
        <%= link_to t('shared_links.back_to_login').upcase, new_session_path(resource_name), class: "form__link" %>
      </p>
    </div>
  <%end%>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-2 text-center">
    <p class="form__label">
      <%= t('shared_links.forgot_password').capitalize %>
      <%= link_to 'Click here'.titlecase, new_password_path(resource_name), class: "form__link",  data: { cy: "forgot-password-link" } %><br />
    </p>
  </div>
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' && controller_name != 'passwords' %>
  <div class="mt-2 text-center">
    <p class="form__label">
      <%= t('shared_links.dont_have_an_account').capitalize %>
      <%= link_to t('registration.sign_up').titlecase, new_registration_path(resource_name), class: "form__link",  data: { cy: "sign-up-link" } %><br />
    </p>
  </div>
<% end %>
<%
=begin%>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('shared_links.confirmation_instruction').capitalize, new_confirmation_path(resource_name), class:"miru_form_link" %><br />
<% end %>
